    <xs:element name="print">
        <xs:annotation>
            <xs:documentation>Print the report (printer)</xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element name="printer" type="xs:string" minOccurs="1" maxOccurs="1">
                    <xs:annotation>
                        <xs:documentation>The printer name. A empty string will 
                            resault in default printer selection</xs:documentation>
                    </xs:annotation>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:complexType name="jsonserver">
        <xs:sequence>
            <xs:element name="url" type="xs:string" minOccurs="1" maxOccurs="1">
                <xs:annotation>
                    <xs:documentation>The server URL</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="type" minOccurs="1" maxOccurs="1">
                <xs:annotation>
                    <xs:documentation>The type of the request POST or GET</xs:documentation>
                </xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:enumeration value="GET" />
                        <xs:enumeration value="POST" />
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="datePattern" type="xs:string" minOccurs="0" maxOccurs="1">
                <xs:annotation>
                    <xs:documentation>The Date pattern in the datasource values</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="numberPattern" type="xs:string" minOccurs="0" maxOccurs="1">
                <xs:annotation>
                    <xs:documentation>The number pattern in the datasource values</xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="xmlserver">
        <xs:sequence>
            <xs:element name="url" type="xs:string" minOccurs="1" maxOccurs="1">
                <xs:annotation>
                    <xs:documentation>The server URL</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="type" minOccurs="1" maxOccurs="1">
                <xs:annotation>
                    <xs:documentation>The type of the request POST or GET</xs:documentation>
                </xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:enumeration value="GET" />
                        <xs:enumeration value="POST" />
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="datePattern" type="xs:string" minOccurs="0" maxOccurs="1">
                <xs:annotation>
